target_header_files += $(patsubst  %, $(includedir)/voba/%, $(header_files))
install_files += $(target_header_files)
$(target_header_files): $(includedir)/voba/% : %
	$(INSTALL) $< $@

target_header_imp_files += $(patsubst  %, $(includedir)/voba/%, $(header_imp_files))
