
CXXFLAGS += -fPIC
CXXFLAGS += -std=c++11
CFLAGS += -fPIC


SRCS_C += voba_value.c
SRCS_CC += voba_value_cpp.cc

libvoba_value.so: $(OBJS)
	$(CXX) -shared -Wl,-soname,$@ -o $@ $^  $(LDFLAGS)


install_files += $(libdir)/libvoba_value.so
$(libdir)/libvoba_value.so: libvoba_value.so
	$(INSTALL) $< $@

header_files := value.h
